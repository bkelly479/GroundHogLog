doctype html
html(lang='en')
  head
    title Ground Hog Log
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
  body
    .container
      .page-header
        h1 Ground Hog Log
      .jumbotron(id='map' style='height:60vh; padding-top:5vh')

      form(id='logBttn' method='POST' action='/createMarker' Content-Type='multipart/form-data')
        button.btn.btn-primary(type='submit' ) Record Groundhog
        input(type='hidden' id='lat' name='lat' value='')
        input(type='hidden' id='lng' name='lng' value='')

